@page
@model VoucherEntryModel
@{
    ViewData["Title"] = "Voucher Entry";
}

<h2>Voucher Entry</h2>

<form method="post">
    <div>
        <label>Voucher Type:</label>
        <input name="Voucher.VoucherType" />
    </div>
    <div>
        <label>Reference No:</label>
        <input name="Voucher.ReferenceNo" />
    </div>
    <div>
        <label>Date:</label>
        <input type="date" name="Voucher.VoucherDate" />
    </div>

    <h3>Entries</h3>
    @for (int i = 0; i < 3; i++)  
    {
        <div style="margin-bottom:10px;">
            <label>Account:</label>
            <select name="Voucher.Entries[@i].AccountId">
                @foreach (var acc in Model.Accounts)
                {
                    <option value="@acc.Id">@acc.Name</option>
                }
            </select>

            <label>Debit:</label>
            <input type="number" step="0.01" name="Voucher.Entries[@i].DebitAmount" />

            <label>Credit:</label>
            <input type="number" step="0.01" name="Voucher.Entries[@i].CreditAmount" />
        </div>
    }

    <button type="submit">Submit Voucher</button>
</form>
